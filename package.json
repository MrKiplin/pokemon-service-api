{
  "name": "pokemon-service-api",
  "version": "1.0.0",
  "description": "Service for connecting to the Pokemon REST API.",
  "main": "index.ts",
  "repository": "https://github.com/MrKiplin/pokemon-service-api.git",
  "author": "MrKiplin <tjworks@hotmail.co.uk>",
  "license": "MIT",
  "scripts": {
    "start": "ts-node-dev index.ts",
    "test": "TZ=UTC jest src --runInBand",
    "test:coverage": "yarn test --coverage",
    "lint-prettier": "prettier --list-different {src,test}/**/*.ts",
    "lint-tslint": "tslint --config tslint.json '{src,test}/**/*.ts'",
    "lint": "yarn lint-prettier && yarn lint-tslint"
  },
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "@types/nock": "^10.0.3",
    "jest": "^24.8.0",
    "nock": "^10.0.6",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "ts-node-dev": "^1.0.0-pre.40",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "@ovotech/typesafe-get": "^2.0.1",
    "axios": "^0.19.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost"
  }
}
